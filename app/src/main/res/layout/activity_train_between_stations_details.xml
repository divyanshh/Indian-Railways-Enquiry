<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_train_between_stations_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.divyanshjain.indianrailwaysenquiry.TrainBetweenStations.TrainBetweenStationsDetails"
    android:background="@drawable/back">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/fromStation"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:hint="From"
        android:textColorHint="@color/colorAccent3"
        android:textAlignment="center"
        android:textColor="@color/colorAccent3"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/toStation"
        android:layout_marginTop="49dp"
        android:hint="To"
        android:textColorHint="@color/colorAccent3"
        android:textAlignment="center"
        android:textColor="@color/colorAccent3"
        android:layout_below="@+id/fromStation"
        android:layout_alignLeft="@+id/fromStation"
        android:layout_alignStart="@+id/fromStation" />

    <TextView
        android:text="Tap to pick date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewDate"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="@color/colorAccent3"
        android:layout_below="@+id/toStation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="106dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewDate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:id="@+id/button5"
        style="?attr/borderlessButtonStyle"
        android:text="Search"
        android:onClick="search"
        android:textColor="@color/colorAccent3"
        android:textSize="20sp"/>

</RelativeLayout>
